{
  "name": "soul-beacon",
  "version": "1.0.0",
  "description": "AI-driven resonance matching platform with Algorand ASA tokens",
  "private": true,
  "workspaces": [
    "frontend",
    "backend", 
    "smart-contracts"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "deploy:contracts": "cd smart-contracts && npm run deploy",
    "test": "npm run test:frontend && npm run test:backend && npm run test:contracts",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:contracts": "cd smart-contracts && npm test",
    "setup": "npm install && npm run setup:algokit && npm run install:all",
    "setup:algokit": "algokit --version || (echo 'Installing AlgoKit...' && pip install algokit)",
    "install:all": "npm run install:frontend && npm run install:backend && npm run install:contracts",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:contracts": "cd smart-contracts && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
